{
  "name": "@faibl/styleguide-boilerplate",
  "private": true,
  "version": "0.0.0",
  "author": "Jonas Fischer-Maeck <info@jonasfischer.net> (https://www.jonasfischer.net)",
  "contributors": [
    "Jonas Fischer-Maeck <info@jonasfischer.net> (https://www.jonasfischer.net)",
    "Hannes Kandulla <hannes.kandulla@gmail.com> (http://www.kandulla.com/)"
  ],
  "license": "private",
  "scripts": {
    "start": "npm run dev",
    "predev": "npm run build:clean",
    "dev": "npm run dev:storybook",
    "format-check": "npm run format-check:sass",
    "format": "npm run format:sass",
    "prebuild": "npm run build:clean",
    "build": "npm run build:storybook",
    "lint": "npm run lint:sass",
    "build:clean": "rimraf tmp && mkdir tmp && rimraf dist && mkdir dist",
    "build:svg-icons": "svg-sprite --config ./svg-sprite.config.json --dest=src/assets src/icons/*.svg",
    "dev:storybook": "storybook dev --ci -p 9100",
    "build:storybook": "storybook build -o dist",
    "lint:sass": "sass-lint --config ./.sass-lint.yml 'src/**/*.scss' --verbose --no-exit",
    "format-check:sass": "prettier  --config ./.prettierrc --check 'src/**/*.scss'",
    "format:sass": "prettier --config ./.prettierrc --write 'src/**/*.scss'",
    "deploy": "npm run build && cpx CNAME dist && node tasks/deploy.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@chromatic-com/storybook": "^3.2.4",
    "@storybook/addon-actions": "^8.5.3",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-links": "^8.5.3",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.5",
    "@storybook/html": "^8.5.3",
    "@storybook/html-webpack5": "^8.5.3",
    "babel-loader": "^9.1.2",
    "cpx": "^1.5.0",
    "gh-pages": "^6.3.0",
    "prettier": "^2.8.8",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^16.0.4",
    "storybook": "^8.5.3",
    "svg-sprite": "^2.0.2"
  }
}
